head
  meta(charset='utf-8')
  meta(content='IE=edge' http-equiv='X-UA-Compatible')
  meta(content='width=device-width, initial-scale=1.0' name='viewport')
  meta(content='' name='description')
  meta(content='' name='author')
  title RANIA Dashboard - Calendar Event Add/Remover
  link(href='../../public/stylesheets/dashboard.css' rel='stylesheet')
#layoutSidenav
  #layoutSidenav_nav
    nav#sidenavAccordion.sb-sidenav.accordion.sb-sidenav-dark
      .sb-sidenav-menu
        .nav
          a.nav-title(href='index.html') RANIA Home
          a.nav-link(href='#') View Calendar
          a.nav-link(href='#') Add Event
          a.nav-link(href='#') Remove Event
      .sb-sidenav-footer
        .small Logged in as:
        |             UserName
  #layoutSidenav_content
    main
      .container-fluid.px-6
        h1.mt-4 Calendar Event Add/Remover
        .row
          .col-lg-6.col-md-12
            .card.mb-4
              .card-header Add Event
              .card-body
                form#addEventForm(action="/agenda/add" method="POST")
                  .form-group
                    label(for='eventTitle') Event Title
                    input#eventTitle.form-control(type='text' name='eventTitle' placeholder='Enter event title')
                  .form-group
                    label(for='eventDate') Event Date
                    input#eventDate.form-control(type='date' name='eventDate' placeholder='Enter event date')
                  .form-group
                    label(for='eventTime') Event Time
                    input#eventTime.form-control(type='time' name='eventTime' placeholder='Enter event time')
                  button.btn.btn-primary(type='submit') Add Event
                  
          .col-lg-6.col-md-12
            .card.mb-4
              .card-header Remove Event
              .card-body
                form#removeEventForm
                  .form-group
                    label(for='eventTitle') Event Title
                    input#eventTitle.form-control(type='text' name='eventTitle' placeholder='Enter event title')
                  .form-group
                    label(for='eventDate') Event Date
                    input#eventDate.form-control(type='date' name='eventDate')
                    button.btn.btn-primary(type='submit') Remove Event
              .form-group
                label(for='eventTime') Event Time
                input#eventTime.form-control(type='time' name='eventTime' placeholder='Enter event time')
              button.btn.btn-primary(type='submit') Remove Event
