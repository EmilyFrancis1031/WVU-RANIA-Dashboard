  body.sb-nav-fixed
    #layoutSidenav
      .mobile-menu
        input#hamburger(
          value="hamb" 
          name="hamb" 
          type="checkbox"
          )
        label(for="hamb") â˜°
        ul.mobile
          li
            a.nav-link(href="/dashboard") Dashboard
          li
            a.nav-link(href="index.html") Edit Contact Info
          li
            a.nav-link(href="index.html") Medical Information
      div(id="layoutSidenav_nav")
        nav#sidenavAccordion.sb-sidenav.accordion.sb-sidenav-dark
          .sb-sidenav-menu
            .nav
              a.nav-title(href="index.html") User Info
              .sb-sidenav-menu-heading Settings
              a.nav-link(href="/dashboard") Dashboard
              a.nav-link(href="index.html") Edit Contact Info
              a.nav-link(href="index.html") Medical Information
          .sb-sidenav-footer
            .small Logged in as:
            | UserName
      div(id="layoutSidenav_content")
        main
          .container-fluid.px-6
            h1.mt-4 User Info
            .row
              .col-md-6
                .card.userInfoCard
                  .card-body User Information
                    .card-text
                      table.userInfo-table
                        tbody
                          tr
                            td Date of Birth:
                            td 01/01/1980
                          tr
                            td Account Creation Date:
                            td 01/01/2020
                          tr
                            td Medical Conditions:
                            td
                              if medical_conditions && medical_conditions.length
                                ul
                                  each condition in medical_conditions
                                    li #{condition}
                              else
                                | No medical conditions found.
                          tr
                            td Medications:
                            td
                              if medications && medications.length
                                ul
                                  each medication in medications
                                    li #{medication}
                              else
                                | No medications found.
                          tr
                            td Emergency Contacts:
                            td
                              if emergency_contacts && emergency_contacts.length
                                ul
                                  each contact in emergency_contacts
                                    li #{contact.name} (#{contact.phone})
                              else
                                | No emergency contacts found.
                  .card-footer.d-flex.align-items-center.justify-content-between

